{
  "name": "webext-storage-devtool",
  "displayName": "WebExt Storage Devtool",
  "version": "0.0.1",
  "private": true,
  "description": "A devtool for inspecting the storage of a web extension",
  "scripts": {
    "dev": "npm run clear && cross-env NODE_ENV=development run-p dev:*",
    "dev:prepare": "esno scripts/prepare.ts",
    "dev:web": "vite",
    "dev:js": "npm run build:js -- --mode development",
    "build": "cross-env NODE_ENV=production run-s clear build:web build:prepare build:js",
    "build:prepare": "esno scripts/prepare.ts",
    "build:web": "vite build",
    "build:js": "vite build --config vite.config.content.ts",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add extension/* -o ./extension.zip",
    "pack:crx": "crx pack extension -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build",
    "start:chromium": "web-ext run --target=chromium",
    "start:firefox": "web-ext run",
    "clear": "rimraf extension/dist extension/manifest.json",
    "lint": "eslint --cache .",
    "test": "vitest test"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "2.0.0-beta.18",
    "@ffflorian/jszip-cli": "^3.4.1",
    "@iconify/json": "^2.2.85",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^20.3.3",
    "@types/webextension-polyfill": "^0.10.1",
    "@unocss/reset": "^0.53.4",
    "@vitejs/plugin-vue": "^4.2.3",
    "@volar-plugins/prettyhtml": "^2.0.0",
    "@vue/test-utils": "^2.4.0",
    "@vueuse/core": "^10.2.1",
    "@ziloen/eslint-config": "^0.0.95",
    "@ziloen/eslint-config-format": "^0.0.95",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "eslint": "^8.44.0",
    "esno": "^0.16.3",
    "fs-extra": "^11.1.1",
    "jsdom": "^22.1.0",
    "kolorist": "^1.8.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.6",
    "unocss": "^0.53.4",
    "unplugin-auto-import": "^0.16.4",
    "unplugin-icons": "^0.16.3",
    "unplugin-vue-components": "^0.25.1",
    "vite": "^4.3.9",
    "vitest": "^0.32.2",
    "vue": "^3.3.4",
    "web-ext": "^7.6.2",
    "webext-bridge": "^6.0.1",
    "webextension-polyfill": "^0.10.0"
  },
  "eslintConfig": {
    "rules": {
      "react/no-unknown-property": 0
    },
    "extends": [
      "@ziloen",
      "@ziloen/eslint-config-format"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "settings": {
      "react": {
        "version": "18"
      }
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "public",
      "volar.config.js",
      "extension",
      "*.html"
    ]
  },
  "webExt": {
    "sourceDir": "extension",
    "artifactsDir": "./",
    "ignoreFiles": [
      "package-lock.json",
      "yarn.lock",
      "pnpm-lock.yaml"
    ],
    "run": {
      "browserConsole": false,
      "firefoxPreview": [
        "mv3"
      ],
      "firefox": "nightly",
      "target": [
        "firefox-desktop"
      ]
    },
    "build": {
      "overwriteDest": true,
      "filename": "extension.xpi"
    }
  },
  "dependencies": {
    "@vueuse/rxjs": "^10.2.1",
    "@wai-ri/core": "^0.0.99",
    "element-plus": "^2.3.7",
    "lodash-es": "^4.17.21",
    "rxjs": "^7.8.1"
  }
}